{
  "name": "@xmtp/botkit",
  "version": "1.0.6",
  "type": "module",
  "main": "dist/src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start:watch": "nodemon dist/src/index.js",
    "start": "node dist/src/index.js",
    "example:echo": "nodemon dist/examples/echo.js && ts-node ./examples/echo.ts",
    "example:conversational": "nodemon dist/examples/conversational.js && ts-node ./examples/conversational.ts",
    "example:gpt": "nodemon dist/examples/gpt.js && ts-node ./examples/gpt.ts"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@xmtp/grpc-api-client": "^0.2.4",
    "@xmtp/xmtp-js": "^11.2.1",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2"
  }
}
