{
  "name": "@xmtp/botkit",
  "version": "1.0.6",
  "type": "module",
  "main": "dist/src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start:watch": "nodemon dist/src/index.js",
    "start": "node dist/src/index.js",
    "dev": "concurrently \"yarn build:watch\" \"yarn start:watch\"",
    "example:echo": "concurrently \"yarn build:watch\" \"nodemon dist/examples/echo.js\"",
    "example:conversational": "concurrently \"yarn build:watch\" \"nodemon dist/examples/conversational.js\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@xmtp/grpc-api-client": "^0.2.4",
    "@xmtp/xmtp-js": "^11.2.1",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2"
  }
}
